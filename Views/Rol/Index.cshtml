@model IEnumerable<Rol>

<div class="container mt-4">
    <h2>Listado de Roles</h2>
    <div class="row mb-3">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Rol</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var rol in Model)
                {
                    <tr>
                        <td>@rol.Nombre</td>
                        <td>
                            <a href="@Url.Action("Edit", new { pId = rol.IdRol })" class="btn btn-sm btn-warning me-2">Modificar</a>
                            <a asp-action="Delete" asp-route-id="@rol.IdRol" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">No hay roles registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
