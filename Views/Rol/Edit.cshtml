@model Rol

<form asp-action="Edit" class="container" method="post">
    <div class="row mb-3">
        <input asp-for="IdRol" value="@Model.IdRol" type="hidden" />
        <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre</label>
            <input asp-for=Nombre type="text" id="nombre" name="nombre" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <button type="submit" class="btn btn-info">Modificar</button>
        </div>
        <div class="col-auto">
            <a class="btn btn-secondary" asp-controller="Rol" asp-action="Index">Cancelar</a>
        </div>
    </div>

</form>
