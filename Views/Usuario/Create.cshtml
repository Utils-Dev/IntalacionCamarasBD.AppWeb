@model Usuario

<div class="container mt-4">
    <h2>Crear Nuevo Usuario</h2>
    <div class="row mb-3">
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
        </div>
    </div>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-4">

                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" id="Nombre" name="Nombre" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label for="Correo">Correo</label>
                    <input type="email" id="Correo" name="Correo" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label for="IdRol">Rol</label>
                    <select id="IdRol" name="IdRol" class="form-control" required>
                        @foreach (var rol in ViewBag.Roles)
                        {
                            <option value="@rol.IdRol">@rol.Nombre</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">

                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" id="Password" name="Password" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label for="">Confirmar contraseña</label>
                    <input type="password" id="" name="" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">

                <div class="form-group">
                    <label for="IdEstado">Estado</label>
                    <select id="IdEstado" name="IdEstado" class="form-control" required>
                        @foreach (var estado in ViewBag.Estados)
                        {
                            <option value="@estado.IdEstado">@estado.Nombre</option>
                        }
                    </select>
                </div>
            </div>

        </div>



       
      
      
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Registrar Usuario</button>
        </div>
    </form>
</div>
