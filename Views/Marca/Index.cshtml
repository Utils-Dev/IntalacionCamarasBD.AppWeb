@model IEnumerable<Marca>
<div class="container mt-4">
    <h2>Listado de Marcas</h2>
    <div class="row mb-3">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">Crear Nueva Marca</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var marca in Model)
            {
                <tr>
                    <td>@marca.Nombre</td>
                    <td>@(marca.IdEstado == 1 ? "Activo" : "Inactivo")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@marca.IdMarca" class="btn btn-sm btn-warning me-2">Modificar</a>
                        <a asp-action="Delete" asp-route-id="@marca.IdMarca" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
